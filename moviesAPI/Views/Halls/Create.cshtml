@model moviesAPI.Models.EntityModels.Hall

@{
    ViewData["Title"] = "Create";
}

<div style="text-align: center;">
    <h2>Додати новий зал</h2>
    <hr />
    <div class="form-container">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label h-font"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label h-font"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label h-font"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <label asp-for="IsAvailable" class="control-label h-font"></label>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check form-radio-btn" 
                       name="btnradio" id="btnradio1" 
                       autocomplete="off" checked
                       asp-for="IsAvailable" value="true" />
                <label class="btn btn-outline-success form-radio-btn" for="btnradio1" >Так</label>
                <input type="radio" class="btn-check form-radio-btn" 
                       name="btnradio" id="btnradio2" autocomplete="off"
                       asp-for="IsAvailable" value="false"/>
                <label class="btn btn-outline-warning form-radio-btn" for="btnradio2">Ні</label>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Створити" class="btn btn-primary submit-btn" />
                <a asp-action="Index" class="btn btn-outline-light">Скасувати</a>
            </div>
        </form>
    </div>
</div>
