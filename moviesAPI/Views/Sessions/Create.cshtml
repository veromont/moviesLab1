@model moviesAPI.Models.EntityModels.Session

@{
    ViewData["Title"] = "Create";
}

<div style="text-align: center;">
    <h2>Додати новий сеанс</h2>
    <hr />
    <div class="form-container">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MovieId" class="control-label h-font"></label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HallId" class="control-label h-font"></label>
                <select asp-for="HallId" class="form-control" asp-items="ViewBag.HallId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label h-font"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label h-font"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label h-font"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Створити" class="btn btn-primary submit-btn" />
                <a asp-action="Index" class="btn btn-outline-light">Скасувати</a>
            </div>
        </form>
    </div>
</div>
