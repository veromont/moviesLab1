@model moviesAPI.Models.EntityModels.Genre

@{
    ViewData["Title"] = "Create";
}

<div style="text-align: center;">
    <h2>Додати новий жанр</h2>
    <hr />
    <div class="form-container">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label h-font"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label h-font"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Створити" class="btn btn-primary submit-btn" />
                <a asp-action="Index" class="btn btn-outline-light">Скасувати</a>
            </div>
        </form>
    </div>
</div>
